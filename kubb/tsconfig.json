{
	"compilerOptions": {
		/* Basic Options */
		"target": "ESNext",

		/* Modules */
		"module": "NodeNext",
		"rootDir": "src",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true ,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		/* Type Checking */
		"strict": true,
		"noUncheckedIndexedAccess": true ,
		"skipLibCheck": true ,
		"declaration": true,
	},
	"include": ["src/**/*"]
}